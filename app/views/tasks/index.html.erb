<h1>タスク一覧</h1>

<table class="table table-hover table-striped table-condensed">
  <% @tasks.each do |task| %>
  <tr>
    <th>ID</th>
    <th class>タスク内容</th>
    <th class>ステータス</th>
  </tr>
  <tr class>
    <td><%= link_to task.id, task %></td>    
    <td><%= task.content %></td>
    <td><%= task.status %></td>
  </tr>
  <% end %>
</table>


<%= link_to "新規タスクの登録", new_task_path, class: "btn btn-primary" %>

<%= paginate @tasks %>